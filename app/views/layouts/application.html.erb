<!DOCTYPE html>
<html ng-app="MarketPlace">
<head>
  <title><%= title yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-ex-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'MarketPlace', root_path, class:"navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="navbar-ex-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li>
                  <%= active_link_to 'Sign Out', destroy_user_session_path, method: :delete %>
                </li>
            <% else %>
                <li>
                  <%= active_link_to 'Sign Up', new_user_registration_path %>
                </li>
                <li>
                  <%= active_link_to 'Sign In', new_user_session_path %>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
        <p class="notice alert-success"><%= notice %></p>
        <p class="alert alert-warning"><%= alert %></p>

        <section>
            <%= yield %>
        </section>
    </div>
</body>
</html>
